<?xml version="1.0" encoding="utf-8"?>
<RegisterView IsBasic="true" RegisterId="975" DefaultLayoutId="1000975" Description="Очередь долгих процессов" LinkedRegistersList="975,976,977,950,941" 
              ShowActualDate="false" ShowObjectCards="true" SearchPanel="CoreLongProcessQueue" ShowFilterMenuOnToolbar="true" 
              SRDFunctionTag="ADMIN.LONG_PROCESS">
  <Buttons>
    <!--
        0 - Добавлен
        1 - Подготовлен к запуску
        2 - Выполняется
        3 - Завершен успешно
        4 - Завершен с ошибкой
        5 - Отправлен запрос на остановку
        6 - Остановлен
        -->
    <Button Caption="Все данные" Icon="icon-contract" NavigateURL="~/LinkedRegisterObjects">
      <Parameters>
        <Parameter Key="ObjectId" Value="[ObjectID]" />
        <Parameter Key="RegisterId" Value="[RegisterId]" />
        <Parameter Key="LightMode" Value="true" />
      </Parameters>
    </Button>
    <Button Caption="Перезапустить" Icon="fas fa-redo-alt" NavigateURL="~/LongProcessManagement/Restart" WindowHeight="160" WindowWidth="520">
      <Parameters>
        <Parameter Key="queueId" Value="[ObjectID]" />
      </Parameters>
      <ConditionGroups>
        <ConditionGroup HideOrDisable="Disable">
          <Conditions>
            <Condition Key="[97500900]" Operation="Equal" Value="0" ByRef="true" />
            <Condition Key="[97500900]" Operation="Equal" Value="1" ByRef="true" AndOr="Or" />
            <Condition Key="[97500900]" Operation="Equal" Value="2" ByRef="true" AndOr="Or" />
          </Conditions>
        </ConditionGroup>
      </ConditionGroups>
    </Button>
    <Button Caption="Отменить задание" Icon="fas fa-ban" NavigateURL="~/LongProcessManagement/CancelTask" WindowHeight="300" WindowWidth="500">
      <Parameters>
        <Parameter Key="TaskId" Value="[ObjectID]" />
      </Parameters>
      <ConditionGroups>
        <ConditionGroup HideOrDisable="Disable">
          <Conditions>
            <Condition Key="[97500900]" Operation="NotEqual" Value="0" ByRef="true" />
            <Condition Key="[97500900]" Operation="NotEqual" Value="1" ByRef="true" AndOr="And" />
            <Condition Key="[97500900]" Operation="NotEqual" Value="2" ByRef="true" AndOr="And" />
          </Conditions>
        </ConditionGroup>
      </ConditionGroups>
    </Button>
    <Button CommandName="ExportToExcel" OpenInRadWindow="false" />
    <Button Caption="Скачать лог" NavigateURL="~/LongProcessManagement/DownloadLog" Icon="fas fa-file-download"
            OpenInNewWindow="true">
      <Parameters>
        <Parameter Key="queueId" Value="[ObjectID]" />
      </Parameters>
    </Button>
  </Buttons>

  <Tabs>
    <Tab Caption="Основные данные" NavigateURL="~/LongProcessManagement/QueueCard">
      <Parameters>
        <Parameter Key="queueId" Value="[ObjectID]" />
      </Parameters>
    </Tab>
  </Tabs>
</RegisterView>