@model Dictionary<long, string>

<div id="toolbar"></div>
<div style="padding: 10px;">Вы выбрали опцию обработать для файлов @string.Join(", ", Model.Select(x => x.Value)). Вы уверены?</div>

<script>
    $(document).ready(function () {
        $('#toolbar').kendoToolBar({
            items: [
                {
                    type: 'button',
                    text: 'Обработать',
                    icon: 'check',
                    click: function (e) {
                        Common.ClearNotification();
                        kendo.ui.progress($('body'), true);

                        $.ajax({
                            url: '@Url.Action("Process", "SkPackages")',
                            type: 'POST',
                            data: '@Json.Serialize(Model)',
                            contentType: 'application/json',
                            success: function (e) {
                                kendo.ui.progress($('body'), false);
                                if (e.Errors && e.Errors.length > 0) {
                                    Common.ShowError(e.Errors.join('<br>'));
                                } else {
                                    Common.ShowMessage('Обработка успешно запущена');
                                    Common.UI.CloseWindow('registerModalWindow', window.parent);
                                }
                            },
                            error: function (e) {
                                kendo.ui.progress($('body'), false);
                                Common.ShowError(e.responseText);
                            }
                        });
                    }
                }
            ]
        });
    });
</script>