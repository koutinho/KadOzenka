@model KadOzenka.Web.Models.Task.DataMappingModalModel

<div>
    <div id="grid"></div>
</div>

<style>
    .k-grid td {
        white-space: normal;
    }
</style>

<script>
    $(document).ready(function() {
        var element = $("#grid").kendoGrid({
             dataSource: {
                transport: {
                    read: {
                        url: '@Url.Action("GetDataMapping", "Task")' + '?taskId=@Model.TaskId&objectId=' + @Model.ObjectId,
                        dataType: "json"
                    }
                },
                filter: { field: "ObjectId", operator: "eq", value: @Model.ObjectId }
            },
            scrollable: false,
            sortable: true,
            columns: [
                { field: "Attribute", title: "Атрибут" },
                { field: "OldValue", title: "Предыдущее значение" },
                { field: "Value", title: "Новое значение" }
            ]
        });
    })
</script>