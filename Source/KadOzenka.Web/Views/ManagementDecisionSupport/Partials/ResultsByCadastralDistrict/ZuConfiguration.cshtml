@using KadOzenka.Web.Helpers
@model KadOzenka.Web.Models.ManagementDecisionSupport.ResultsByCadastralDistrictReport.ZuConfigurationModel

<div class="form-horizontal" style="padding: 2%">
    @using (Html.BeginForm("ProcessResultsByCadastralDistrictForZuReport", "ManagementDecisionSupport", FormMethod.Post, new { id = "getReportForm" }))
    {
        if (Model.TaskIds == null || Model.TaskIds.Length == 0)
        {
            <div class="form-group">
                <span style="color: red">Не выбраны задания на оценку</span>
            </div>
        }
        else
        {
            for (var i = 0; i < Model.TaskIds?.Length; i++)
            {
                @Html.HiddenFor(m => m.TaskIds[i])
            }

            <div class="form-group">
                <div class="col-sm-5">
                    @Html.CustomLabelFor(m => m.InfoAboutExistenceOfOtherObjectsAttributeId)
                </div>
                <div class="col-sm-7">
                    @Html.KendoDropDownListTreeWithButton(m => m.InfoAboutExistenceOfOtherObjectsAttributeId, Model.GbuAttributes)
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-5">
                    @Html.CustomLabelFor(m => m.InfoSourceAttributeId)
                </div>
                <div class="col-sm-7">
                    @Html.KendoDropDownListTreeWithButton(m => m.InfoSourceAttributeId, Model.GbuAttributes)
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-5">
                    @Html.CustomLabelFor(m => m.SegmentAttributeId)
                </div>
                <div class="col-sm-7">
                    @Html.KendoDropDownListTreeWithButton(m => m.SegmentAttributeId, Model.GbuAttributes)
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-5">
                    @Html.CustomLabelFor(m => m.UsageTypeCodeAttributeId)
                </div>
                <div class="col-sm-7">
                    @Html.KendoDropDownListTreeWithButton(m => m.UsageTypeCodeAttributeId, Model.GbuAttributes)
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-5">
                    @Html.CustomLabelFor(m => m.UsageTypeNameAttributeId)
                </div>
                <div class="col-sm-7">
                    @Html.KendoDropDownListTreeWithButton(m => m.UsageTypeNameAttributeId, Model.GbuAttributes)
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-5">
                    @Html.CustomLabelFor(m => m.UsageTypeCodeSourceAttributeId)
                </div>
                <div class="col-sm-7">
                    @Html.KendoDropDownListTreeWithButton(m => m.UsageTypeCodeSourceAttributeId, Model.GbuAttributes)
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-2 col-sm-offset-10">
                    <input type="button" id="getReportBtn" class="k-button" value="Сформировать" />
                </div>
            </div>
        }
    }
</div>



<script src="~/js/common-reports.js"></script>
<script type="text/javascript">

    $(document).ready(function() {
        $("#getReportBtn").click(processReport);
    });

</script>
