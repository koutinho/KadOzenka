@using KadOzenka.Dal.LongProcess.Reports.KRSummaryResults.Entities
@model KadOzenka.Web.Models.ManagementDecisionSupport.KRSummaryResultsOksModel

<div class="form-horizontal col-sm-12" style="padding: 5%">
    @using (Html.BeginForm("ProcessCadastralCostDeterminationResultsReport", "ManagementDecisionSupport", FormMethod.Post, new { id = "getReportForm" }))
    {
        if (Model.TaskIds == null || Model.TaskIds.Length == 0)
        {
            <div class="form-group">
                <span style="color: red">Не выбраны задания на оценку</span>
            </div>
        }
        else
        {
            for (var i = 0; i < Model.TaskIds?.Length; i++)
            {
                @Html.HiddenFor(m => m.TaskIds[i])
            }

            <div class="form-group">
                <div class="col-sm-2">
                    @Html.LabelFor(x => x.KladrAttributeId)
                </div>
            </div>

            <div style="padding-left: 5%">
                <div class="form-group">
                    <div class="col-sm-10">

                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-2">
                    @Html.LabelFor(x => x.ParentKnAttributeId)
                </div>
            </div>

            <div style="padding-left: 5%">
                <div class="form-group">
                    <div class="col-sm-10">

                    </div>
                </div>
            </div>


            <div class="form-group">
                <div class="col-sm-2 col-sm-offset-10">
                    <input type="button" id="getReportBtn" class="k-button" value="Сформировать отчет" />
                </div>
            </div>
        }
    }
</div>



<script src="~/js/common-modals.js"></script>
<script src="~/js/custom-validation.js" charset="utf-8"></script>
<script type="text/javascript">

    $(document).ready(function() {
        $("#getReportBtn").click(processReport);
    });




    function processReport() {
        kendo.ui.progress($('body'), true);
        var form = $('#getReportForm');
        var formObject = Common.Functions.FormToObject(form);
        $.ajax({
            type: form.attr('method'),
            url: form.attr('action'),
            data: formObject,
            traditional: true,
            success: function (response) {
                if (response.Errors) {
                    var errors = getErrors(response.Errors);
                    Common.ShowError(errors);
                    return;
                } else {
                    Common.ShowMessage("Процесс добавлен в очередь. Результат будет отправлен на почту.");
                }
            },
            error: function(response) {
                Common.ShowError(response.responseText);
            },
            complete: function() {
                kendo.ui.progress($('body'), false);
            }
        });
    }
</script>
