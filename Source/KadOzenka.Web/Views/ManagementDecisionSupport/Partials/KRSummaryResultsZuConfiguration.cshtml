@using KadOzenka.Web.Helpers
@model KadOzenka.Web.Models.ManagementDecisionSupport.KRSummaryResultsZuModel

<div class="form-horizontal col-sm-12" style="padding: 5%">
    @using (Html.BeginForm("KRSummaryResultsZuConfiguration", "ManagementDecisionSupport", FormMethod.Post, new {id = "getReportForm"}))
    {
        if (Model.TaskIds == null || Model.TaskIds.Length == 0)
        {
            <div class="form-group">
                <span style="color: red">Не выбраны задания на оценку</span>
            </div>
        }
        else
        {
            for (var i = 0; i < Model.TaskIds?.Length; i++)
            {
                @Html.HiddenFor(m => m.TaskIds[i])
            }

            <div class="form-group">
                <div class="col-sm-2">
                    @Html.LabelFor(x => x.KladrAttributeId)
                </div>

                <div class="col-sm-10">
                    @Html.KendoDropDownListTreeWithButton(m => m.KladrAttributeId, Model.GbuAttributes)
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-2 col-sm-offset-10">
                    <input type="button" id="getReportBtn" class="k-button" value="Сформировать отчет"/>
                </div>
            </div>
        }
    }
</div>
<script src="~/js/common-modals.js"></script>
<script src="~/js/custom-validation.js" charset="utf-8"></script>
<script src="~/js/reports-form.js"></script>