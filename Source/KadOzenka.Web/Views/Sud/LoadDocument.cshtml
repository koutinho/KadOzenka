<div class="form-horizontal col-sm-12">
	<div class="form-group">
		<div class="col-sm-2">
			@Html.CustomLabelFor("Загрузить файл")
		</div>
		<div class="col-sm-10">
			<input name="files" id="files" type="file" aria-label="files" accept="*"/>
		</div>
	</div>
</div>
<script type="text/javascript">
	$('#files').kendoUpload({
		multiple: false,
		localization: {
			select: 'Загрузить Файл'
		},
		async: {
			autoUpload: false
		},
		validation: {
			allowedExtensions: []
		}
	}).data('kendoUpload');
</script>
