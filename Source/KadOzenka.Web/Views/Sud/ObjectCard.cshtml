	<script type="text/javascript">
		$(document).ready(function() {

			//Автокомлит для кадастрового номера
			function onSelect(e) {
				var url = "@Url.Action("GetAutoFillDataByKn", "Sud")" + `?kn=${e.dataItem.value}`;
				$.get(url).done(function (response) {
					$('#Address').val(response.Address);
					$('#ObjectType').data('kendoDropDownList').value(response.Type);
					console.log('response', response);
				});
			}

			var dataSource = new kendo.data.DataSource({
				serverFiltering: true,
				transport: {
					read: {
						url: "@Url.Action("GetKnData", "Sud")",
						dataType: "json",
						data: function(opt) {
							return {
								searchText: $("#Kn").val()
							}
						}
					}
				}
			});
			$("#Kn").kendoAutoComplete({
				dataTextField: "text",
				select: onSelect,
				filter: "contains",
				minLength: 3,
				clearButton: false,
				dataSource: dataSource
			});
			// end auto complete

			const panelbar = $('#ls_panelbar').kendoPanelBar().data('kendoPanelBar');
			panelbar.expand('li[data-expand]');

			$("#navigation-menu a").mPageScroll2id({
				highlightSelector: "#navigation-menu a"
			});
			/*$.ajaxDataLoader.addMethod('resizeGrid302', function() {
			    resizeGrid($("#Grid-302"));
			});

			$.ajaxDataLoader.addMethod('resizeGrid304', function () {
			    resizeGrid($("#Grid-304"));
			});

			$.ajaxDataLoader.addMethod('resizeGrid314', function () {
			    resizeGrid($("#Grid-314"));
			});

			function resizeGrid(grid) {
			    if (grid.length) {
			        var dataArea = grid.find(".k-grid-content");
			        grid.css('height', '100%');
			        dataArea.css('height', '100%');
			    }
			}*/
