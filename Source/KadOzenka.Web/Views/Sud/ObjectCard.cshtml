						@Html.Raw(@"{
						type: 'button',
						id: 'reloadCardBtn',
						text: '',
						click: function() {
							updateData(() => { Common.ShowMessage('Данные успешно обновлены'); });
						},
						icon: 'refresh',
						hidden: false
					}," +

								  @"{
						type: 'button',
						id: 'editBtn',
						text: '',
						click: function () {
						KendoExtension.ToggleEditMode(true);
						toolbar.hide($('#editBtn'));
						toolbar.show($('#saveBtn'));
						toolbar.show($('#cancelBtn'));
					},
					icon: 'edit',
					hidden: !isEditPermission
