                <span>На карте</span>
                <div>
                    <div class="form-horizontal col-sm-12">
                        <div class="MapContainer">
                            <div id="objectMap" class="Map"></div>
                        </div>
                    </div>
                </div>
            </li>
        }
    </ul>
    <div class="static-nav">
        <nav id="navigation-menu">
            <a href="#Section_Main">Основные данные</a>
