                                                    <img src="@(Url.Action("ShowFile", "MarketObjects") + "?id=" + screen.Item1)" alt="" style="height:92px; width:192px" />
                                                </a>
                                            </div>
                                        </div>
                                    </li>
                                }
                            </ol>
