                                {
                                    @(Html.Kendo().Tooltip()
                                                  .For("#historyImg")
                                                  .Name("priceHistoryTooltip")
                                                  .ContentTemplateId("historyRangeGrid")
                                                  .Position(TooltipPosition.Right)
                                                  .AutoHide(false)
                                    )
                                }
                                else
                                {
                                    @(Html.Kendo().Tooltip()
                                                  .For("#historyImg")
                                                  .Name("priceHistoryTooltip")
                                                  .ContentTemplateId("historyGrid")
                                                  .Position(TooltipPosition.Right)
                                                  .AutoHide(false)
                                    )
                                }

