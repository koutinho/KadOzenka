@using ObjectModel.Directory
@model KadOzenka.Web.Models.MarketObject.CoreObjectDto

<div class="form-horizontal col-sm-12 general">
	@if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
	{
		<div class="form-group">
			<div class="col-sm-12">
				<img src="@Model.ImageUrl" class="img-thumbnail">
			</div>
		</div>
	}
	@if (!string.IsNullOrWhiteSpace(Model.MarketLogoUrl))
	{
		<div class="form-group">
			<div class="col-sm-4">
				@Html.LabelFor(x => x.Market)
			</div>
			<div class="col-sm-3">
				@Html.Label(Model.Market)
			</div>
			<div class="col-sm-2">
				<img src="@Model.MarketLogoUrl" class="sourceIcon">
			</div>
		</div>
	}
	<div class="form-group">
		<div class="col-sm-4">
			@Html.LabelFor(x => x.DealType)
		</div>
		<div class="col-sm-8">
			@Html.Label(Model.DealType)
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-4">
			@Html.LabelFor(x => x.Price)
		</div>
		<div class="col-sm-8">
			@Html.Label(Model.Price?.ToString("n") + " ₽")
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-4">
			@if (Model.CIPJSTypeCode == PropertyTypesCIPJS.LandArea)
			{
				@Html.Label("Цена за сот.")
			}
			else
			{
				@Html.Label("Цена за м²")
			}
		</div>
		<div class="col-sm-8">
			@Html.Label(Model.PricePerSquareMeter?.ToString("n") + " ₽")
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-4">
			@Html.LabelFor(x => x.Area)
		</div>
		<div class="col-sm-8">
			@Html.Label(Model.AreaStr)
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-4">
			@Html.LabelFor(x => x.Address)
		</div>
		<div class="col-sm-8">
			@Html.Label("Name", Model.Address, new { style = "word-wrap: break-word" })
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-4">
			@Html.LabelFor(x => x.CadastralNumber)
		</div>
		<div class="col-sm-8">
			@Html.Label(Model.CadastralNumber)
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-4">
			@Html.LabelFor(x => x.MarketSegment)
		</div>
		<div class="col-sm-8">
			@Html.Label(Model.MarketSegment)
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-10 col-sm-offset-2">
			<input type="button" value="Исключить из расчета" id="excludeFromCalculation_@Model.Id" />
		</div>
	</div>
</div>


<script>
	$(document).ready(function () {
		console.log("WORKS");
	});
</script>
	
<style>
	.general {
		font-size: 130%;
	}

	.sourceIcon {
		  background-size: 21px 31px;
		  background-repeat: no-repeat;
		  background-position: center right;
		  width: 21px;
		  height: 31px;
		  cursor: pointer;
	  }
</style>
