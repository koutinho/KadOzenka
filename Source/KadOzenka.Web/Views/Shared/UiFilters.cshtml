@using KadOzenka.Web.Helpers
@model KadOzenka.Dal.Models.Filters.Filters

<div class="row" id="@(ViewData.TemplateInfo.HtmlFieldPrefix+"_filterTypeContainer")" hidden>
    <div class="col-sm-3">
        @Html.KendoDropDownListEnumFor(m=>m.Type)
    </div>
</div>


<div class="row" id="@(ViewData.TemplateInfo.HtmlFieldPrefix+"_stringFilterContainer")">
    <div class="col-sm-3">
        @Html.KendoDropDownListEnumFor(m=>m.StringFilter.FilteringType)
    </div>
    <div class="col-sm-4" id="@(ViewData.TemplateInfo.HtmlFieldPrefix+"_stringFilterValueContainer")">
        @Html.Kendo().TextBoxFor(m=>m.StringFilter.Value)
    </div>
</div>

<div class="row" id="@(ViewData.TemplateInfo.HtmlFieldPrefix+"_numberFilterContainer")">
    <div class="col-sm-3">
        @Html.KendoDropDownListEnumFor(m=>m.NumberFilter.FilteringType)
    </div>
    <div id="@(ViewData.TemplateInfo.HtmlFieldPrefix + "_numberFilterValueContainer")" class="col-sm-4">
        @Html.Kendo().NumericTextBoxFor(m => m.NumberFilter.Value)
    </div>
    <div id="@(ViewData.TemplateInfo.HtmlFieldPrefix + "_numberFilterValue2Container")" class="col-sm-4" hidden>
        @Html.Kendo().NumericTextBoxFor(m => m.NumberFilter.Value2)
    </div>
</div>

<div class="row" id="@(ViewData.TemplateInfo.HtmlFieldPrefix+"_dateFilterContainer")">
    <div class="col-sm-3">
        @Html.KendoDropDownListEnumFor(m=>m.DateFilter.FilteringType)
    </div>
    <div id="@(ViewData.TemplateInfo.HtmlFieldPrefix + "_dateFilterValueContainer")" class="col-sm-4">
        @Html.KendoDatePickerFor(m => m.DateFilter.Value, isReadonly: false)
    </div>
    <div id="@(ViewData.TemplateInfo.HtmlFieldPrefix + "_dateFilterValue2Container")" class="col-sm-4" hidden>
        @Html.KendoDatePickerFor(m => m.DateFilter.Value2, isReadonly: false)
    </div>
</div>

<div class="row" id="@(ViewData.TemplateInfo.HtmlFieldPrefix+"_boolFilterContainer")">
    <div class="col-sm-3">
        @Html.KendoDropDownListEnumFor(m=>m.BoolFilter.FilteringType)
    </div>
    <div class="col-sm-1" id="@(ViewData.TemplateInfo.HtmlFieldPrefix+"_BoolFilterValueContainer")">
        @Html.KendoCheckBoxFor(m=>m.BoolFilter.Value, isReadonly:false)
    </div>
</div>