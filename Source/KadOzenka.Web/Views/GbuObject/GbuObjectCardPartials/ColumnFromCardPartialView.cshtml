@model KadOzenka.Web.Models.GbuObject.ObjectAttributes.AttributeDto

@{
    string idCurrentControl = ViewBag?.registerId.ToString() + "_" + ViewBag?.attrCounter.ToString() as string ?? Guid.NewGuid().ToString();
}
<div class="col-sm-2">
    @Html.CustomLabel(Model.Name, false)
</div>
<div class="col-sm-4">
    <div class="col-sm-10">
        @{
            if (Model.IsString)
            {
                @Html.KendoTextBoxFor(r => r.StringValue, id: idCurrentControl)
            }
            else if (Model.IsNumber)
            {
                @Html.KendoTextBoxFor(r => r.NumValue, id: idCurrentControl)
            }
            else if (Model.IsDate)
            {
                @Html.KendoDatePickerFor(r => r.DateValue, id: idCurrentControl)
            }
            else if (Model.IsBool)
            {
                @Html.KendoTextBoxFor(r => r.BoolValue, id: idCurrentControl)
            }
        }
    </div>
    <div class="col-sm-2" style="padding:0; display: flex; justify-content: space-evenly;">
        <span class="k-button k-button-icon attrEdit @(!Model.NotEditable ? "k-state-disabled" : "")"
              data-Edit-url="" data-Register-id="@(ViewBag?.registerId)" data-Attribute-id="@(Model.Id)">
            <span id="@(Model.Id)attrEditImg" class="k-icon k-i-edit"></span>
        </span>
        <span class="k-button k-button-icon attrHistory" data-History-url="@(Model.AttributeHistoryUrl)" data-Register-id="@(ViewBag?.registerId)" data-Attribute-id="@(Model.Id)">
            <span id="@(Model.Id)historyImg" class="k-icon k-i-calendar"/>
        </span>
    </div>
</div>