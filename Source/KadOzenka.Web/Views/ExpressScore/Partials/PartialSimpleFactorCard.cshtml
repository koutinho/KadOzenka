@model KadOzenka.Dal.ExpressScore.Dto.SimpleCostFactor
<div class="form-group">
    <div class="col-sm-2">
        @Html.CustomLabelFor("Имя коэф.", true)
    </div>
    <div class="col-sm-4">
        @Html.Kendo().TextBox().Name($"Name-simple-{ViewBag.Count}").Value(Model.Name)
    </div>
    <div class="col-sm-2">
        @Html.CustomLabelFor("Коэффициент", true)
    </div>
    <div class="col-sm-3">
        @Html.Kendo().NumericTextBox().Name($"Coefficient-simple-{ViewBag.Count}").Spinners(false).Decimals(6).Format("n6").Value(Model.Coefficient.HasValue? (double)Model.Coefficient.GetValueOrDefault() : (double?)null)
    </div>
    <div class="col-sm-1">
        <button disabled="@(!((bool)ViewBag.IsEdit))" type="button" class="k-button-icon k-button remove-simple">
            <span class="k-i-close k-icon"></span>
        </button>
    </div>
</div>

