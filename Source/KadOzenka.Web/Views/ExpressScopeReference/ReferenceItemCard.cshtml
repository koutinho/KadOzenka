@using ObjectModel.Directory.ES
@using ObjectModel.ES
@model KadOzenka.Web.Models.ExpressScoreReference.ReferenceItemViewModel

@using (Html.BeginForm("ReferenceItemCard", "ExpressScopeReference", FormMethod.Post))
{
@Html.HiddenFor(m => m.Id)
@Html.HiddenFor(m => m.ReferenceId)
<div class="form-horizontal col-sm-12">
    <div class="form-group"></div>
    <div class="form-group">
        <div class="col-sm-2">
            @Html.CustomLabelFor(m => m.ReferenceId)
        </div>
        <div class="col-sm-10">
            @Html.KendoTextBoxFor(m => m.ReferenceName, isReadonly: true)
        </div>
    </div>
    <div class="form-group numberValueContainer" style="@(Model.ValueType == ReferenceItemCodeType.Number ? "" :"display: none")">
        <div class="col-sm-2">
            @Html.CustomLabelFor(m => m.Value)
        </div>
        <div class="col-sm-10">
            @Html.Kendo().NumericTextBoxFor(m => m.NumberValue).Format($"N{2}").HtmlAttributes(new { style = "width: 100%;" })
        </div>
    </div>
    <div class="form-group dateValueContainer" style="@(Model.ValueType == ReferenceItemCodeType.Date ? "" : "display: none")">
        <div class="col-sm-2">
            @Html.CustomLabelFor(m => m.Value)
        </div>
        <div class="col-sm-6">
            @Html.KendoDatePickerFor(x => x.DateTimeValue, isReadonly: false)
        </div>
    </div>
    <div class="form-group stringValueContainer" style="@(Model.ValueType == ReferenceItemCodeType.String ? "" :"display: none")">
        <div class="col-sm-2">
            @Html.CustomLabelFor(m => m.Value)
        </div>
        <div class="col-sm-10">
            @Html.KendoTextBoxFor(m => m.Value, isReadonly: false)
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-2">
            @Html.CustomLabelFor(m => m.ValueType)
        </div>
        <div class="col-sm-10">
            @Html.KendoEnumDropDownListFor(m => m.ValueType, false, withoutNull: true)
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-2">
            @Html.CustomLabelFor(m => m.CalcValue)
        </div>
        <div class="col-sm-10">
            @Html.Kendo().NumericTextBoxFor(m => m.CalcValue).Format($"N{2}").HtmlAttributes(new { style = "width: 100%;" })
        </div>
    </div>
    <div class="form-group"></div>
    <div class="form-group"></div>
    <div class="form-group"></div>
    <div class="form-group">
        <div class="col-sm-12">
            <button style="float: right" class="k-button" id="save" type="button">Сохранить</button>
        </div>
    </div>
</div>
}

<script src="~/js/custom-validation.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('#@(nameof(Model.ValueType))').data('kendoDropDownList').bind("change", onTypeChanged);

        $('#save').on('click',
            function () {
                kendo.ui.progress($('body'), true);
                var form = $('form');
                var formObject = Common.Functions.FormToObject(form);

                $.post(form.attr('action'), formObject).done(function (response) {
                    if (response.Errors) {
                        var errors = getErrors(response.Errors);
                        Common.ShowError(errors);
                        return;
                    }

                    if (response.Success && response.Id) {
                        $('#@Html.IdFor(m => m.Id)').val(response.Id);
                        Common.ShowMessage(response.Success);
                    }
                }).fail(function (response, textStatus, errorThrown) {
                    Common.ShowError(response.responseText);
                }).always(function() {
                    kendo.ui.progress($('body'), false);
                });
            });
    });

    function onTypeChanged(e) {
		var value = this.value();
        if (value == '@ReferenceItemCodeType.Number.GetEnumCode()') {
            activateNumberValue();
        } else if (value == '@ReferenceItemCodeType.Date.GetEnumCode()') {
            activateDateValue();
        } else {
            activateStringValue();
        }
	}

    function activateNumberValue() {
        $('.numberValueContainer').show();
        $('.dateValueContainer').hide();
        $('.stringValueContainer').hide();
        $('#@(nameof(Model.DateTimeValue))').data('kendoDatePicker').value(null);
        $('#@(nameof(Model.Value))').val(null);
    }
    function activateDateValue() {
        $('.numberValueContainer').hide();
        $('.dateValueContainer').show();
        $('.stringValueContainer').hide();
        $('#@(nameof(Model.NumberValue))').data('kendoNumericTextBox').value(null);
        $('#@(nameof(Model.Value))').val(null);
    }
    function activateStringValue() {
        $('.numberValueContainer').hide();
        $('.dateValueContainer').hide();
        $('.stringValueContainer').show();
        $('#@(nameof(Model.DateTimeValue))').data('kendoDatePicker').value(null);
        $('#@(nameof(Model.NumberValue))').data('kendoNumericTextBox').value(null);
    }

</script>