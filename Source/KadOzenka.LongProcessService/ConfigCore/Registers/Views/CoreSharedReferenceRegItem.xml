<?xml version="1.0" encoding="utf-8"?>
<RegisterView IsBasic="true" RegisterId="{Get:overrideRegisterId}" Description="Представление для элементов справочников на основе реестров" 
              ShowObjectCards="false" ShowSettingsPanel="false" ShowFilterMenu="false" UseMasterPage="false">
  <Buttons>
    <Button Caption="Добавить" NavigateURL="/RegisterObject/RegisterViewModel" NeedRefresh="true">
      <Parameters>
        <Parameter Key="registerId" Value="{Get:overrideRegisterId}" />
        <Parameter Key="objectId" Value="-1" />
      </Parameters>
      <ConditionGroups>
        <ConditionGroup HideOrDisable="Hide">
          <Conditions>
            <Condition Key="{Get:ReadOnly}" Operation="Equal" Value="1" />
          </Conditions>
        </ConditionGroup>
      </ConditionGroups>
    </Button>
    
    <Button Caption="Изменить" NavigateURL="/RegisterObject/RegisterViewModel" NeedRefresh="true">
      <Parameters>
        <Parameter Key="registerId" Value="{Get:overrideRegisterId}" />
        <Parameter Key="objectId" Value="[ObjectID]" />
      </Parameters>
      <ConditionGroups>
        <ConditionGroup HideOrDisable="Hide">
          <Conditions>
            <Condition Key="{Get:ReadOnly}" Operation="Equal" Value="1" />
          </Conditions>
        </ConditionGroup>
      </ConditionGroups>
    </Button>

    <Button Caption="Все данные" Icon="icon-contract" NavigateURL="~/LinkedRegisterObjects" WindowTitleTemplate="Все данные">
      <Parameters>
        <Parameter Key="ObjectId" Value="[ObjectId]" />
        <Parameter Key="RegisterId" Value="{Get:overrideRegisterId}" />
        <Parameter Key="LightMode" Value="true" />
      </Parameters>
    </Button>
  </Buttons>
</RegisterView>